*
  box-sizing border-box
  color #333
  font-family monospace

html
  margin 0
  padding 0
  background-color beige

body
  max-width 923px
  margin 15px auto
  padding 10px

header
  text-decoration italic

#invoice
  & > *
    width 400px
    margin auto

  h1.paid
    display block
    text-align center
    font-size 180%
    padding 80px

  svg
    display block

  p
    margin 20px auto
    white-space pre-wrap
    word-wrap break-word
    word-break break-all

  button
    display block
    margin-bottom 30px

#pin
  max-width 500px
  margin auto
  display flex
  flex-direction column

  label
    display flex
    margin 3px
    align-items center

    span
      padding 2px 7px

    input
      flex-grow 3
      font-size 115%
      padding 9px

  button
    margin 9px 20%
    padding 12px 0
    font-size 115%

#objects
  display flex
  flex-wrap wrap

  .object
    margin 15px
    padding 9px
    background-color white
    box-shadow 3px 3px 5px #bababa
    border-radius 8px

    &, h3
      white-space pre-wrap
      word-break break-all
      word-wrap break-word

    table
      width 100%

    button
      margin 15px
      display block

    ul, li
      padding 0
      margin 0

footer
  margin-top 200px
